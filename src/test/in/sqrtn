default(realprecision,38);
sqrtn(0.,3)
sqrtn(0.*I,3)
sqrtn(1/2,3)
sqrtn(quadgen(5),3)
sqrtn(8+O(17^100), 3)

test(b, M)=
{ my (B = b);
  for (i=2, M,
    B *= b; \\ b^i
    a = sqrtnint(B + 1, i);
    if (a != b, error([b, B, i]));
  );
}
test(2, 100);
test(2^32+1, 10);
test(2^64+1, 10);

sqrtn(Mod(0,3),-2)
sqrtn(O(3),-2)
sqrtn(0*ffgen((2^64+13)^2),-2)
sqrtn(0*ffgen(3^2),-2)
sqrtn(0*ffgen(2^2),-2)

sqrtnint(10^1000,1001)
sqrtn(2., 10, &z)
z
sqrtn(10+O(3^8), 10, &z)
z
sqrtn(1+O(3^3), -3)
sqrtn(1,1)
sqrtn(1,-1,&z)
z
sqrtn(Mod(2,4),3)
sqrtn(Mod(2,4),3,&z)
sqrtn(1, 3)
sqrtint(0)
