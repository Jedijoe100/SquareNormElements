default(realprecision,38);
default(seriesprecision,6);
besseljh(1,2^64)
besseljh(10,x)
NU = [x,0,1,1/2,sqrt(2),10,1+I];
ARG = [x,1,1/2,1+I];
test(f)=
{
print(f);
for (i=1,#NU,
  for (j=1,#ARG,
    print([i,j],": ", iferr(f(NU[i],ARG[j]), E,E));
  )
);
}
test(besselh1);
test(besselh2);
test(besseli);
test(besselj);
test(besseljh);
test(besselk);
test(besseln);
