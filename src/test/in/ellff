test(nextprime(2^65),2);

a=ffgen(ffinit(101,3),'a);
E=ellffinit([1,3],a); E.j
E.disc
P=random(E);Q=random(E);
R=elladd(E,P,Q);
elladd(E,ellsub(E,R,P),ellneg(E,Q))
N=ellcard(E);ellpow(E,P,N)

check(a)=
{
  my(E,P,N);
  E=ellffinit([1,0,0,0,a],a,1);
  N=ellcard(E);
  for(i=1,4,
    P=random(E);
    if(ellpow(E,P,N)!=[0],error(a)));
  ellgenerators(E);
}
{
  for(a=1,8,
    g = ffprimroot(ffgen(ffinit(2,a),'t));
    for(i=0,2^a-2, check(g^i)));
  for(a=1,6,
    g = ffprimroot(ffgen(ffinit(3,a),'t));
    for(i=0,3^a-2, check(g^i)));
}

checkt(p,n,v,B=1000)=
{
  my(a=ffgen(ffinit(p,n),'a));
  for(i=1,B,
    my(E,N,b);
    until(b,b=random(a));
    E=ellffinit(if(f==0,[0,b],f==1,[b,0],[b^2,b^3]),a,2);
    N=ellcard(E);
    if(#ellmul(E,random(E),N)>1,error(i,":",b)));
}
